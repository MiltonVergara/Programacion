            cin>>tamaño;
            cout<<logaritmo(x, tamaño);
        }else{
            if(opcion == 2){
                cout<<"ingresa el valor de x: ";
                cin>>x;
                cout<<endl <<"ingresa el tamaño: ";
                cin>>tamaño;
                cout<<seno(x, tamaño);
            }else{
                if(opcion == 3){
                    cout<<"ingresa el valor de x: ";
                    cin>>x;
                    cout<<endl <<"ingresa el tamaño: ";
