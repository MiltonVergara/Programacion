float logaritmo (int a, int b){
    
}

float coseno (int a, int b){
    float coseno;
    for (int i=0;i<b;i++){
        coseno += potencia(-1, i)* potencia(a, 2*i)/factorial(2*i);
    }
    return coseno;
    
}

float seno (int a, int b){
    float seno;
    for (int i=0;i<b;i++){
        seno += potencia(-1, i)* potencia(a, 2*i+1)/factorial(2*i+1);
    }
    return seno;
}

int potencia(int base, int expo)
{
    int pot=1;
    for(int i=1;i<=expo;i++)
    {
        pot*=base;
    }
    return pot;
}

int factorial(int n)
{
    int fac=1;
    for(int i=1;i<=n;i++)
    {
        fac*=i;
    }
    return fac;
}
